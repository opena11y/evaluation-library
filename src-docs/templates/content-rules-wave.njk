{% macro wcagVersion(id) %}
  {% if id === 'WCAG21' %}
    (new in WCAG 2.1)
  {% endif %}
  {% if id === 'WCAG22' %}
    (new in WCAG 2.2)
  {% endif %}
{% endmacro %}


          {% for rc in allRuleCategories %}
            <h2 id="rc-{{rc.id}}" class="rules">{{rc.title}}</h2>
            <table class="table table-striped" aria-labelledby="rc-{{rc.id}}">
              <thead>
                <th>Rule ID</th>
                <th>OpenA11y Rule Summary</th>
                <th>Related WAVE Rules</th>
              </thead>
              <tbody>
              {% if rc.hasWaveRules %}
                {% for r in rc.rules %}
                  {% if r.wave_rules.length %}
                    <tr id="{{r.htmlId}}">
                      <td>{{r.id}}</td>
                      <td><a href="{{r.filename | safe}}#wave">{{r.summary | safe}}</a></td>
                      <td>
                        <ul>
                          {% for r in r.wave_rules %}
                            <li><a href="{{r.url | safe}}">{{r.title | safe}}</a> ({{r.type}}) </li>
                          {% endfor %}
                       </ul>
                      </td>
                    </tr>
                  {% endif %}
                {% else %}
                  <tr>
                    <td colspan="12"><em>no rules</em></td>
                  </tr>
                {% endfor %}
              {% else %}
                  <tr>
                    <td colspan="12"><em>no WAVE/popetech rules mapped for this category</em></td>
                  </tr>
              {% endif %}
              </tbody>
            </table>
          {% endfor %}

          <h2 id="wave-rules" class="rules">Unmapped WAVE/popetech Rules</h2>
          <p>{{unmappedWaveRules.length}} of {{allWaveRules.length}} WAVE/popetech rules are NOT mapped to OpenA11y rules.</p>
          <table class="table table-striped" aria-labelledby="wave-rules">
            <thead>
              <th>WAVE/popetech Rule</th>
              <th>Type</th>
            </thead>
            <tbody>
            {% for r in unmappedWaveRules %}
              <tr>
                <td>
                  <a href="{{r.url | safe}}">{{r.title | safe}}</a>
                </td>
                <td>
                  {{r.type | safe}}
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>




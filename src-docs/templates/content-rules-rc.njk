{% macro wcagVersion(id) %}
  {% if id === 'WCAG21' %}
    (new in WCAG 2.1)
  {% endif %}
  {% if id === 'WCAG22' %}
    (new in WCAG 2.2)
  {% endif %}
{% endmacro %}

          {% for rc in allRuleCategories %}
            <h2 id="rc-{{rc.id}}" class="rules">{{rc.title}}</h2>
            <table class="table table-striped" aria-labelledby="rc-{{rc.id}}">
              <thead>
                <th>Rule ID</th>
                <th>Summary</th>
                <th>Level</th>
                <th>Conformance</th>
                <th>SC</th>
                <th>Scope</th>
                <th colspan="4">Result Values</th>
                <!--
                <th>aXe</th>
                <th>WAVE</th>
                -->
              </thead>
              <tbody>
              {% for r in rc.rules %}
                <tr id="{{r.htmlId}}">
                  <td>{{r.id}}</td>
                  <td><a href="{{r.filename | safe}}#rc">{{r.summary | safe}}</a></td>
                  <td>{{ r.wcag_level }}</td>
                  <td>{% if r.rule_required %}Required{% else %}<em>Recommended</em>{% endif %}</td>
                  <td><a href="{{r.wcag_primary.url | safe}}" target="_spec">{{r.wcag_primary_id}}</a></td>
                  <td>{{ r.rule_scope }}</td>
                  <td>{% if r.has_failures %}<abbr title="Failures">F</abbr>{% endif %}</td>
                  <td>{% if r.has_manual_checks %}<abbr title="Manual Checks">MC</abbr>{% endif %}</td>
                  <td>{% if r.has_pass %}<abbr title="Passed">P</abbr>{% endif %}</td>
                  <td>{% if r.has_hidden %}<abbr title="Hidden">H</abbr>{% endif %}</td>
                  <!--
                  <td>{% if r.has_axe %}Yes{% endif %}</td>
                  <td>{% if r.has_wave %}Yes{% endif %}</td>
                  -->
                </tr>
              {% else %}
                <tr>
                  <td colspan="10"><em>no rules</em></td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          {% endfor %}




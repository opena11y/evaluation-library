{% macro wcagVersion(id) %}
  {% if id === 'WCAG21' %}
    (new in WCAG 2.1)
  {% endif %}
  {% if id === 'WCAG22' %}
    (new in WCAG 2.2)
  {% endif %}
{% endmacro %}

<html lang="en-us">
  <head>
    {% include "./head.njk" %}
  </head>
  <body>
    {% include "./header.njk" %}

    <!-- Main section-->
    <div id="main-section" class="container px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">{{title | safe}}</li>
        </ol>
      </nav>
      <main class="row gx-4 justify-content-center">
        <div class="col-lg-8">
          {% block content %}

          <h1>{{title}}</h1>

          <p><a href="rules-rc.html">View Rules by Rule Categories</a></p>

          {% for gl in allGuidelines %}
            <h2 id="gl-{{gl.id}}" class="rules">{{gl.title}}</h2>
            {% for sc in gl.successCriteria %}
              {% if (sc.level > 1) or (sc.id === '1.4.6') or (sc.id === '2.5.5') %}
              <h3 id="sc-{{sc.id}}" class="rules">{{sc.title}} {{ wcagVersion(sc.wcagVersion) }}</h3>
              <table class="table table-striped" aria-labelledby="sc-{{gl.id}}">
                <thead>
                  <th>ID</th>
                  <th>Summary</th>
                  <th>Level</th>
                  <th>Conformance</th>
                  <th>Scope</th>
                </thead>
                <tbody>
                {% for r in sc.rules %}
                  <tr id="{{r.htmlId}}">
                    <td>{{r.id}}</td>
                    <td><a href="{{r.filename | safe}}#gl">{{r.summary | safe}}</a></td>
                    <td>{% if r.wcag_primary.level === 4 %}A{% else %}{% if r.wcag_primary.level === 2 %}AA{% else %}AAA{% endif %}{% endif %}</td>
                    <td>{% if r.rule_required %}Required{% else %}<em>Recommended</em>{% endif %}</td>
                    <td>{{r.rule_scope}}</td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="5"><em>no rules at this time</em></td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
              {% endif %}
            {% endfor %}
          {% endfor %}


          {% endblock %}

        </div>
      </main>
    </nav>
    {% include "./footer.njk" %}
    {% include "./scripts.njk" %}
  </body>
</html>


<html lang="en-us">
  <head>
    {% include "./head.njk" %}
  </head>
  <body>
    {% include "./header.njk" %}

    <!-- Main section-->
    <div id="main-section" class="container px-4">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">{{title | safe}}</li>
        </ol>
      </nav>
      <main class="row gx-4 justify-content-center">
        <div class="col-lg-8">
          {% block content %}
          <h1>{{title}}</h1>
          <div id="rule-summary-tables">

            <h2>Rules By Rule Category</h2>
            {% for rc in allRuleCategories %}
              <h3 id="rc-{{rc.rule_category_id}}">{{rc.title}}</h3>
              <table class="table table-striped" aria-labelledby="rc-{{rc.rule_category_id}}">
                <thead>
                  <th>ID</th>
                  <th>Summary</th>
                  <th>Level</th>
                  <th>SC</th>
                </thead>
                <tbody>
                {% for r in rc.rules %}
                  <tr>
                    <td>{{r.id}}</td>
                    <td><a href="{{r.filename | safe}}">{{r.summary | safe}}</a></td>
                    <td>{{r.primary.level}}</td>
                    <td><a href="{{r.primary.url | safe}}" target="_spec">{{r.primary_id}}</a></td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="4"><em>no rules</em></td>
                  </tr>
                {% endfor %}
              </table>
            {% endfor %}

            <h2>Rules By WCAG Guideline</h2>
            {% for gl in allGuidelines %}
              <h3 id="gl-{{gl.guideline_id}}">{{gl.title}}</h3>
              <table class="table table-striped" aria-labelledby="gl-{{gl.guideline_id}}">
                <thead>
                  <th>ID</th>
                  <th>Summary</th>
                  <th>Level</th>
                  <th>SC</th>
                </thead>
                <tbody>
                {% for r in gl.rules %}
                  <tr>
                    <td>{{r.id}}</td>
                    <td><a href="{{r.filename | safe}}">{{r.summary | safe}}</a></td>
                    <td>{{r.primary.level}}</td>
                    <td><a href="{{r.primary.url | safe}}" target="_spec">{{r.primary_id}}</a></td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="4"><em>no rules</em></td>
                  </tr>
                {% endfor %}
              </table>
            {% endfor %}
          </div>
          {% endblock %}

        </div>
      </main>
    </nav>
    {% include "./footer.njk" %}
    {% include "./scripts.njk" %}

  </body>
</html>

<html>
  <head>
    {% include "./head.njk" %}
  </head>
  <body>
    {% include "./header.njk" %}
    <!-- Header-->
    <header class="bg-primary bg-gradient text-white">
        <div class="container px-4 text-center">
            <h1 class="fw-bolder">Welcome to OpenA11y Evaluation Library</h1>
            <p class="lead">Javascript Library for Evaluating WCAG 2.1 Accessibility Requirements.</p>
        </div>
    </header>

    <!-- Main section-->
    <main class="container px-4">
      <div class="row gx-4 justify-content-center">
        <div class="col-lg-8">
          {% block content %}
          <h1>{{title}}</h1>
          <div id="rule-summary-tables">
            {% for rc in allRuleCategories %}
              <h2 id="rc-{{rc.rule_category_id}}">{{rc.title}}</h2>
              <table class="table table-striped" aria-labelledby="rc-{{rc.rule_category_id}}">
                <thead>
                  <th>ID</th>
                  <th>Summary</th>
                  <th>Level</th>
                  <th>SC</th>
                </thead>
                <tbody>
                {% for r in rc.rules %}
                  <tr>
                    <td>{{r.id}}</td>
                    <td><a href="{{r.filename | safe}}">{{r.summary | safe}}</a></td>
                    <td>{{r.primary.level}}</td>
                    <td><a href="{{r.primary.url | safe}}" target="_spec">{{r.primary_id}}</a></td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="4"><em>no rules</em></td>
                  </tr>
                {% endfor %}
              </table>
            {% endfor %}
          </div>
          {% endblock %}
        </div>
      </div>
    </main>
    {% include "./footer.njk" %}
    {% include "./scripts.njk" %}

  </body>
</html>

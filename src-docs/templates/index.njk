<html>
  <head>
    {% include "./head.njk" %}
  </head>
  <body>
    {% include "./header.njk" %}
    <!-- Header-->
    <header class="bg-primary bg-gradient text-white">
        <div class="container px-4 text-center">
            <h1 class="fw-bolder">Welcome to OpenA11y Evaluation Library</h1>
            <p class="lead">Open Souce Web Accessibility Evaluation Library for Evaluating WCAG 2.1 requirements using ARIA 1.2 best practices.</p>
        </div>
    </header>

    <!-- Main section-->
    <main class="container px-4">
      <div class="row gx-4 justify-content-center">
        <div class="col-lg-8">
          {% block title %}
          <h1>{{title}}</h1>
          {% endblock %}
          <div id="about">
            {% block content %}
            <table class="table table-striped">
              <thead>
                <th>ID</th>
                <th>Summary</th>
                <th>Level</th>
                <th>SC</th>
              </thead>
              <tbody>
            {% for ruleInfo in allRuleInfo %}
              <tr>
                <td>{{ruleInfo.id}}</td>
                <td><a href="{{ruleInfo.filename}}">{{ruleInfo.summary}}</a></td>
                <td>{{ruleInfo.primary.level}}</td>
                <td><a href="{{ruleInfo.primary.url}}">{{ruleInfo.primary_id}}</a></td>
              </tr>
            {% endfor %}
            </table>
            {% endblock %}
          </div>
        </div>
      </div>
    </main>
    {% include "./footer.njk" %}
    {% include "./scripts.njk" %}

  </body>
</html>

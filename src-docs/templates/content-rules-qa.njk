{% macro wcagVersion(id) %}
  {% if id === 'WCAG21' %}
    (new in WCAG 2.1)
  {% endif %}
  {% if id === 'WCAG22' %}
    (new in WCAG 2.2)
  {% endif %}
{% endmacro %}

          <table class="table table-striped">
            <thead>
              <th>Rule ID</th>
              <th>Scope</th>
              <th>Summary</th>
              <th>Description</th>
            </thead>
            <tbody>
            {% for r in allRules %}
              {% if r.has_manual_checks and 'erify' in r.definition %}
              <tr id="{{r.htmlId}}">
                <td>{{r.id}}</td>
                <td>{{r.rule_scope}}</td>
                <td><a href="{{r.filename | safe}}#gl">{{r.summary | safe}}</a></td>
                <td>
                  <div>
                    <b {% if 'erify' in r.definition %}style="color: red; font-size: 120%"{% endif %}>Definition:</b>
                    {{r.definition | safe}}
                  </div>
                  <div style="margin-top: 1em">
                    <b>Manual Check:</b>
                    {{r.mc_message | safe}}
                  </div>
                </td>
              </tr>
              {% endif %}
            {% endfor %}
            </tbody>
          </table>

          {% endblock %}

        </div>

